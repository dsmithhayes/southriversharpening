{% extends 'skeleton.twig' %}

{% block content %}
<form name="update-home" id="home" method="POST" action="/home">
  <article>
    <h1>Update the Home page</h1>
    <div>
      <label for="title">Title</label>
      <input id="title" type="text" name="title" />
    </div>
    <div>
      <label for="content">Content</label>
      <textarea id="content" name="content"></textarea>
    </div>
    <div>
      <input type="submit" label="Submit" name="submit" />
    </div>
  </article>
</form>
{% endblock %}

{% block scripts %}
<script src="js/update.min.js"></script>
{% endblock %}
